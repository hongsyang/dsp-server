<?xml version="1.0" encoding="UTF-8" ?>

<configuration scan="true" scanPeriod="3 seconds">
    <!--定义日志文件的存储地址 勿在 LogBack 的配置中使用相对路径-->
    <property name="LOG_HOME" value="/data/dsp/logs" />
    <!--设置日志输出为控制台-->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %m%n</pattern>
            <!--<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %m%n</pattern>-->
        </encoder>
    </appender>
    <!--根据业务类型输出日志-->
    <appender name="SIFT" class="ch.qos.logback.classic.sift.SiftingAppender">
        <discriminator>
            <Key>sift</Key>
            <DefaultValue>dsp-server</DefaultValue>
        </discriminator>
        <sift>
            <appender name="FILE-${sift}" class="ch.qos.logback.core.rolling.RollingFileAppender">
                <File>${LOG_HOME}/${sift}/${sift}.log</File>
                <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                    <FileNamePattern>${LOG_HOME}/${sift}/${sift}.%d{yyyyMMddHH}.log</FileNamePattern>
                </rollingPolicy>
                <layout class="ch.qos.logback.classic.PatternLayout">
                    <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %m%n</Pattern>
                </layout>
            </appender>
        </sift>
    </appender>
    <appender name="PHOENIX" class="ch.qos.logback.classic.sift.SiftingAppender">
        <discriminator>
            <Key>phoenix</Key>
            <DefaultValue>phoenix</DefaultValue>
        </discriminator>
        <sift>
            <appender name="FILE-${phoenix}" class="ch.qos.logback.core.rolling.RollingFileAppender">
                <File>${LOG_HOME}/${phoenix}/${phoenix}.log</File>
                <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                    <FileNamePattern>/${LOG_HOME}/${phoenix}/${phoenix}.%d{yyyyMMddHH}.log</FileNamePattern>
                </rollingPolicy>
                <layout class="ch.qos.logback.classic.PatternLayout">
                    <Pattern>%m%n</Pattern>
                </layout>
            </appender>
        </sift>
    </appender>
    <logger name="org.quartz" level="ERROR" />
    <logger name="io.lettuce" level="ERROR" />
    <!--设置日志输出为文件-->
   <!-- <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>logFile.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>logs/logFile.%d{yyyy-MM-dd_HH}.log</FileNamePattern>
        </rollingPolicy>

        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>%d{HH:mm:ss,SSS} [%thread] %-5level %logger{32} - %msg%n</Pattern>
        </layout>
    </appender>-->

    <root>
        <level value="DEBUG"/>
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="SIFT"/>
        <appender-ref ref="PHOENIX"/>
    </root>


</configuration>